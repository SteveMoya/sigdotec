---
import { Icon } from "astro-icon/components";

interface Props {
  icon: string;
  value: string | number | undefined;
  title: string;
}

const { icon, value, title } = Astro.props;
---
<div
        class=' bg-gray-700 shadow-xl rounded-md flex items-center justify-between p-3 border-b-4 border-blue-600 font-medium group '
      >
        <div
          class='flex justify-center items-center w-14 h-14 bg-white rounded-full transition-all duration-300 transform group-hover:rotate-12'
        >
          <Icon
            name={icon}
            class='text-gray-800 transform transition-transform duration-500 ease-in-out w-10 h-10'
          />
        </div>
        <div class='text-right'>
          <p class='text-2xl'>{value}</p>
          <p>{title}</p>
        </div>
      </div>