---
import { Picture } from "astro:assets";

import horizontal from "/public/SIGDOTEC-FINAL-23.svg";
import basico from "/public/SIGDO-32.svg";

export interface Props {
  size: string;
  variant: "primary" | "secondary";
  loading?: "lazy" | "eager";
}
const { size, variant, loading = "lazy" } = Astro.props;

const getLogoStyle = (variant: "primary" | "secondary"): ImageMetadata => {
  if (variant === "primary") {
    return basico;
  }
  return horizontal;
};
---

<Picture
  loading={loading}
  src={getLogoStyle(variant)}
  formats={["avif", "webp", "jpeg"]}
  alt="SIGDOTEC Logo"
  class={`self-center ml-2 rtl:ml-0 rtl:mr-2 whitespace-nowrap ${size}`}
/>
