export interface Props {
  size: string
  variant: 'primary' | 'secondary'
}
const { size, variant } = Astro.props

const getLogoStyle = (variant: 'primary' | 'secondary'): string => {
  if (variant === 'primary') {
    return '/SIGDO-32.svg'
  }
  return '/SIGDOTEC-FINAL-23.svg'
}
---

<img
  class={`self-center ml-2 rtl:ml-0 rtl:mr-2 whitespace-nowrap ${size}`}
  src={`${getLogoStyle(variant)}`}
  alt='SIGDO Logo'
/>
