---
import Br from '@components/ui/Br.astro'
import testimonialsItems from '@config/Testimonios.json'
import TestimonialCard from '@components/ui/TestimoniasCard.astro'

const col1: Testimonial[] = testimonialsItems.TestimonialsItemsCol1
const col2: Testimonial[] = testimonialsItems.TestimonialsItemsCol2
const col3: Testimonial[] = testimonialsItems.TestimonialsItemsCol3

interface Testimonial {
  name: string
  title: string
  image: string
  testimony: string
}
---
  <section class='max-w-6xl mx-8 md:mx-10 lg:mx-20 xl:mx-auto'>
    <div
      class='transition duration-500 ease-in-out transform scale-100 translate-x-0 translate-y-0 opacity-100'
    >
      <div class='mb-12 space-y-5 md:mb-16 md:text-center'>
        <div
          class='inline-block px-3 py-1 text-sm font-semibold text-indigo-100 rounded-lg md:text-center text-cn bg-[#202c47] bg-opacity-60 hover:cursor-pointer hover:bg-opacity-40'
        >
          Testimonios
        </div>
        <h1 class='mb-5 text-3xl font-semibold md:text-center md:text-5xl'>
          Que las personas dicen
        </h1>
        <p class='text-xl text-gray-100 md:text-center md:text-2xl'>
          nuestros clientes satisfechos hablan por nosotros
        </p>
        <Br />
      </div>
    </div>
    <div class='grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 lg:gap-8'>
      <ul class='space-y-8 '>
        {
          col1.map((item) => (
            <TestimonialCard
              name={item.name}
              title={item.title}
              image={item.image}
              testimony={item.testimony}
            />
          ))
        }
      </ul>
      <ul class=' space-y-8 sm:block'>
        {
          col2.map((item) => (
            <TestimonialCard
              name={item.name}
              title={item.title}
              image={item.image}
              testimony={item.testimony}
            />
          ))
        }
      </ul>

      <ul class=' space-y-8 lg:block'>
        {
          col3.map((item) => (
            <TestimonialCard
              name={item.name}
              title={item.title}
              image={item.image}
              testimony={item.testimony}
            />
          ))
        }
      </ul>
    </div>
  </section>

