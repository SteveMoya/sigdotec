---
import Button from '@components/ui/Button.astro'
import Container from '@components/ui/Container.astro'
import Paragraph from '@components/ui/Paragraph.astro'

interface Props {
  title?: string
  cta?: string
  description?: string
  buttontext?: string
}
// Aqui colocamos valores por defecto si no se envian
const {
  title = '¿Qué estas esperando para hacer tus planes con',
  cta = 'SIGDOTEC?',
  description = 'Comienza hoy mismo a crear tus planes de una forma rapida y sencilla.',
  buttontext = 'Planificar'
} = Astro.props

---

<section id='cta' class='pb-20'>
  <Container>
    <div
      class='w-full relative py-8 md:py-10 px-6 md:px-8 rounded-2xl animate-slide-in-bottom bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-800'
    >
      <div class='absolute right-0 top-0 h-full w-full flex justify-end'>
        <div
          class='w-28 h-28 overflow-hidden flex rounded-xl relative blur-2xl'
        >
          <span
            class='absolute w-16 h-16 -top-1 -right-1 bg-accent-400 rounded-md rotate-45'
          ></span>
          <span
            class='absolute w-16 h-16 -bottom-1 -right-1 bg-accent-400 rounded-md rotate-45'
          ></span>
          <span
            class='absolute w-16 h-16 -bottom-1 -left-1 bg-secondary-950 rounded-md rotate-45'
          ></span>
        </div>
      </div>

      <div class='absolute left-0 bottom-0 h-full w-full flex items-end'>
        <div
          class='w-28 h-28 overflow-hidden flex rounded-xl relative blur-2xl'
        >
          <span
            class='absolute w-16 h-16 -top-1 -right-1 bg-accent-400 rounded-md rotate-45'
          ></span>
          <span
            class='absolute w-16 h-16 -bottom-1 -right-1 bg-accent-400 rounded-md rotate-45'
          ></span>
          <span
            class='absolute w-16 h-16 -bottom-1 -left-1 bg-secondary-950 rounded-md rotate-45'
          ></span>
        </div>
      </div>
      <div class='mx-auto text-center max-w-xl md:max-w-2xl relative'>
        <h2
          class='text-3xl/tight sm:text-4xl/tight md:text-5xl/tight
          font-bold text-heading-1'
        >
          {title}
          <span class='bg-gradient-text'>{cta}</span>
        </h2>
        <Paragraph className={'pt-10'}>
          {description}
        </Paragraph>
        <div class='mx-auto max-w-md sm:max-w-xl pt-10'>
          <Button variant={'primary'}>
            <span class='relative z-[5]'>{buttontext}</span>
          </Button>
        </div>
      </div>
    </div>
  </Container>
</section>
