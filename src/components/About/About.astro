---
import SocialList from '@components/ui/SocialList.astro'
import { slugify } from '@src/utils'
// import { team } from '@data/team'
import { Image, Picture } from 'astro:assets'
import { getCollection } from 'astro:content'

const Team = await getCollection('team')
---

<style>
  .PersonCard {
    font-family: robotolight_italic;
    position: relative;
    overflow: hidden;
    border: 1px solid transparent; /* Asegura un espacio para el borde */
    border-radius: 8px; /* O el valor que desees */
    transition: border-color 0.5s ease-in-out;
  }
  .PersonCard::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1; /* Coloca el pseudo-elemento detrás del contenido de la tarjeta */
    background-image: linear-gradient(to top, #015281, #069bf2);
    transform: translateY(100%);
    transition: transform 0.5s ease-in-out;
  }

  .PersonCard:hover::before {
    transform: translateY(0);
  }
  h1,
  h2,
  p {
    font-family: robotolight_italic;
  }
  .PersonCard img {
    transition: transform 0.5s ease-in-out;
  }
</style>

<section class='container px-6 mx-auto'>
  <div class='py-4'>
    <h2
      class='text-3xl font-semibold text-center capitalize lg:text-4xl text-primary-700'
    >
      Nuestro Equipo de trabajo
    </h2>

    <p class='max-w-2xl mx-auto my-6 text-center'>
      Con un compromiso unificado hacia la innovación y la excelencia,
      presentamos a los brillantes miembros del equipo de SIGDOTEC, cuya pasión
      y experiencia son el motor que impulsa nuestros proyectos hacia el éxito.
    </p>
  </div>

  <div class='grid grid-cols-1 gap-8 xl:mt-6 md:grid-cols-2 xl:grid-cols-4'>
    {
      Team.map((teams) => (
        <div class=' PersonCard flex flex-col items-center p-8 transition-all duration-700 ease-in-out transform group border shadow-[6px_6px_6px_#cbced1,-6px_-6px_6px_white] dark:shadow-[6px_6px_6px_#090909,-6px_-6px_6px_#3c3c3c] rounded-xl'>
          <Image
            class='object-cover w-32 h-32 rounded-full ring-4 ring-primary-700 group-hover:ring-white'
            src={teams.data.image}
            alt={`Imagen de ${teams.data.name}`}
            width={teams.data.image.width}
          />
          <a
            href={`/team/${slugify(teams.data.name)}`}
            class='mt-4 text-2xl font-semibold text-gray-700 capitalize dark:text-white group-hover:text-white'
          >
            {teams.data.name}
          </a>
          <p class='mt-2 text-gray-500 capitalize dark:text-gray-200 font-semibold group-hover:text-slate-200 text-pretty text-center	'>
            {teams.data.role}
          </p>

          <div class=' mt-3 -mx-2'>
            <SocialList
              width='w-[24px]'
              height='h-[24px]'
              socials={teams.data.socials}
            />
          </div>
        </div>
      ))
    }
  </div>
</section>
