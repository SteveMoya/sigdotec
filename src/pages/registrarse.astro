---
import { SignUpForm } from "@/components/Register";
import SocialSingUp from "@/components/SocialSingUp.astro";

import Logo from "@/components/ui/Logo.astro";
import Layout from "@layouts/Layout.astro";
import { Toaster } from "sonner";
// import { RegisterB } from "@components/App/RegisterB";
// import { SignUpForm } from "@components/Register.tsx";
import { isProd } from "@/utils/constans";
if (isProd) {
  return Astro.redirect("/404");
}
---

<Layout
  title="Registrate"
  description="Aqui te puedes registrar en para que puedas acceder tus planes de clase"
>
  <section class="mt-6">
    <div
      class="mx-auto max-w-lg space-y-6 border rounded-2xl p-6 dark:bg-gray-800 bg-gray-200 shadow-2xl dark:border-gray-700 border-gray-300"
    >
      <div class="space-y-2 text-center">
        <div class="flex justify-center mb-4">
          <Logo variant="primary" size="w-32" />
        </div>
        <h1 class="text-3xl font-bold bg-gradient-text">Registrarte</h1>
        <p class="text-muted-foreground">
          Crear una cuenta para crear tus planes de clase
        </p>
      </div>

      <div class="space-y-4">
        <SignUpForm client:load />

        <SocialSingUp />
        <div class="flex justify-between">
          <p>
            ¿Ya tienes una cuenta?
            <a
              href="/iniciar-sesion"
              class="inline-block text-sm underline hover:text-primary-800"
            >
              Iniciar Sesión
            </a>
          </p>
        </div>
      </div>
    </div>
  </section>
  <Toaster
    richColors
    closeButton
    toastOptions={{
      classNames: {
        success: "bg-success-600",
        error: "bg-danger-600",
        loading: "bg-secondary-200",
      },
    }}
    client:only
  />
</Layout>
