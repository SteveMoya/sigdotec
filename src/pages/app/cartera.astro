---
import AppLayout from '@layouts/App/AppLayout.astro'
import DashboardCash from '@components/Dashboard/DashboardCash.astro'
// import Pay from '@components/Payment/Pay.astro'
import { PaypalButtom } from '@components/Payment/PaypalButtom'
import { Icon } from 'astro-icon/components'

const user = Astro.locals.user;
if (!user) {
  return Astro.redirect("/login");
}
---

<AppLayout title='Cartera' description='Esta es tu Cartera'>
  <DashboardCash />

  <div class='h-screen flex justify-center items-center'>
    <PaypalButtom client:only />
  </div>
  <button
    type='button'
    class='text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center flex items-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800'
  >
    Selecciona un plan
    <Icon name='mdi:arrow-right-thin' class='text-2xl my-0' />
  </button>
</AppLayout>
