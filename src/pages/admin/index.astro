---
import AppLayout from '@layouts/App/AppLayout.astro'
import AdminView from '@components/Admin/AdminView.astro'
import PrimeTable from '@components/Admin/PrimeTable'
import {
  BasicDemo,
  DoughnutChartDemo,
  HorizontalBarDemo,
  LineStylesDemo,
  PieChartDemo,
  StackedBarDemo,
  VerticalBarDemo
} from '@components/Admin/Charts'
---

<AppLayout title='Admin View' description='Esta es la vista del administrador'>
  <AdminView />
  <PrimeTable client:only />
  <div class="w-[900px]  grid grid-cols-1 md:grid-cols-2 bg-slate-200 mx-0">

    <BasicDemo client:only />
    <PieChartDemo client:only />
    <DoughnutChartDemo client:only />
    <VerticalBarDemo client:only />
    <HorizontalBarDemo client:only />
    <StackedBarDemo client:only />
    <LineStylesDemo client:only />
  </div>
</AppLayout>
